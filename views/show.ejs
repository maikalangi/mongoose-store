<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head.ejs') %> 
    <title><%= product %> </title>
</head>
<body>

    <nav>
        <a href="/store">
            Back to the Store
        </a>
    </nav>

    <h1>
        <%= product.name %> 
    </h1>

    <div id='container'>
        <img src="<%= product.img %>" alt="<%= product.name %>">
        <p>
            <%= product.description %> 
        </p>
        Price: $<%= product.price %>
        <%= product.qty %> remaining
        <form action="/store/<%= product._id %>/buy">
            <input type="submit" value="Buy">
        </form>
        <a href="/store/<%= product._id %>/edit">
            Edit this product
        </a>
    </div>

    <form action="/store<%= product._id %>?_method=DELETE" method="POST">
        <input type="submit" value="delete">
    </form>

</body>
</html>